<h1>Your projects</h1>
<div class="card-container">
    <% textAdv.forEach( adv=> { %>
        <div class="card-project">
            <h2>
                <%= adv.title %>
            </h2>
            <p>
                <%= adv.description %>
            </p>
            <a href="/TextAdventure/<%= `${adv.id}-i-i` %>" class='btn-link'>
                <button class="card-btn play-btn">
                   play
                </button>
            </a>
            <a href="/myprojects/update<%= `${adv.id}` %>" class='btn-link'>
                <button class="card-btn upd-btn">
                    Update Project
                </button>
            </a>
            <a href="/myprojects/delete<%= `${adv.id}` %>" class='btn-link'>
                <button class="card-btn">
                    Delete Project
                </button>
            </a>
        </div>
        <% }) %>
</div>